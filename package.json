{
  "name": "local-assistant",
  "version": "0.1.0",
  "private": true,
  "description": "Offline local LLM + RAG desktop app (Electron + React + TypeScript) with llama.cpp servers embedded.",
  "author": "You",
  "license": "MIT",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build:main": "tsc -p app/tsconfig.main.json",
    "build:preload": "tsc -p app/tsconfig.preload.json",
    "build:renderer": "vite build --config app/renderer/vite.config.mts",
    "build": "rimraf dist && npm run build:main && npm run build:preload && npm run build:renderer",
    "typecheck": "tsc -p app/tsconfig.main.json && tsc -p app/tsconfig.preload.json && tsc -p app/renderer/tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "dist": "npm run build && electron-builder -c electron-builder.yml",
    "postinstall": "electron-builder install-app-deps",
    "llama:build": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-llama-server.ps1 -Backend cpu",
    "llama:build:cuda": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-llama-server.ps1 -Backend cublas",
    "llama:build:metal": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-llama-server.ps1 -Backend metal"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.7.4",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^31.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "better-sqlite3": "12.2.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
